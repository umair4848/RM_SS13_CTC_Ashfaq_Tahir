<?xml version="1.0"?>
<launch>

	<!-- start gazebo with empty world -->
	<include file="$(find brsu_gazebo_worlds)/ros/launch/empty-world.launch" />

	<!-- send world urdf to param server -->
	<param name="world_description" command="$(find xacro)/xacro.py $(find brsu_gazebo_worlds)/common/worlds/$(env ROBOT_ENV)$(optenv ENV_MODE).urdf.xacro" />

	<!-- push world_description to factory and spawn robot in gazebo -->
	<!-- start in front of door -->
	<!-- <node name="spawn_urdf_world" pkg="gazebo" type="spawn_model" args="-urdf -param world_description -x 6.0 -y 6.0 -z 0.01 -R 0.0 -P 0.0 -Y 3.14 -model urdf_world_model" respawn="false" output="screen" /> -->
	<!-- start in front of bed -->
	<node name="spawn_urdf_world" pkg="gazebo" type="spawn_model" args="-urdf -param world_description -x -3.2 -y 3.8 -z 0.01 -R 0.0 -P 0.0 -Y -1.57 -model urdf_world_model" respawn="false" output="screen" />

</launch>
